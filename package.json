{
  "name": "openapi-auditor",
  "version": "1.0.0",
  "description": "Standardized OpenAPI quality auditing platform with diagnostic reports",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "openapi-auditor": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "README.ko.md",
    "LICENSE"
